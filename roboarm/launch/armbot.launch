<launch>

  <!-- Arguments -->
  <arg name="robot_name" value="armbot"/>
  <arg name="model" default="$(find roboarm)/urdf/armbot/armbot.urdf.xacro"/>

  <!-- start Gazebo with an empty world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="true"/>
    <arg name="debug" value="false"/>
    <arg name="verbose" value="true"/>
    <!-- <arg name="world_name" value="$(find roboarm)/worlds/simul.world"/> -->
    <arg name="world_name" value="$(find roboarm)/worlds/arena.world"/>
  </include>
  
  <!--Spawns Robot inside a Gazebo simulation -->
  <param name="/armbot/robot_description"
        command="xacro $(arg model)"/>
  <node pkg="gazebo_ros" type="spawn_model" name="spawn_$(arg robot_name)" 
        args="-x 0.0 -y 0.0 -z 0.1 -unpause -urdf -param /armbot/robot_description -model $(arg robot_name)" respawn="false">
  </node>

   <!--Spawns Controller inside a Gazebo simulation -->
  <rosparam command="load"
            file="$(find roboarm)/config/manual_drive.yaml"/>
  <node name="armbot_controller_spawner" pkg="controller_manager" type="spawner"
    ns="/armbot" args="joint_state_controller arm_trajectory_controller mobile_base_controller gripper"/>

  <!--Setup TF -->
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" ns="/armbot">
    <param name="publish_frequency" type="double" value="30.0" />
    <remap from="/joint_states" to="/armbot/joint_states"/>
    <remap from="/robot_description" to="/armbot/robot_description" />
  </node>
  
  <!--Setup manual control through GUI -->
  <node name="rqt_robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering">
    <param name="default_topic" value="/armbot/mobile_base_controller/cmd_vel"/>
  </node>
  <node name="rqt_joint_trajectory_controller" pkg="rqt_joint_trajectory_controller" type="rqt_joint_trajectory_controller">
    <remap from="/robot_description" to="/armbot/robot_description" />
  </node>

</launch>
